{
  "id": "aof",
  "name": "AOF â€” Agentic Ops Fabric",
  "version": "0.1.0",
  "kind": "memory",
  "description": "Deterministic task orchestration layer for multi-agent systems. Provides filesystem-first kanban, context-aware dispatch, org chart governance, and real-time views.",
  "main": "dist/plugin.js",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "dataDir": {
        "type": "string",
        "description": "AOF state directory (default: ~/.openclaw/aof)"
      },
      "pollIntervalMs": {
        "type": "number",
        "description": "Scheduler poll interval in milliseconds (default: 30000)"
      },
      "defaultLeaseTtlMs": {
        "type": "number",
        "description": "Default task lease TTL in milliseconds (default: 300000)"
      },
      "dryRun": {
        "type": "boolean",
        "description": "If true, scheduler observes but doesn't dispatch (default: true)"
      },
      "gatewayUrl": {
        "type": "string",
        "description": "OpenClaw gateway URL for HTTP dispatch (e.g. http://127.0.0.1:18789)"
      },
      "gatewayToken": {
        "type": "string",
        "description": "OpenClaw gateway authentication token"
      },
      "heartbeatTtlMs": {
        "type": "number",
        "description": "Heartbeat TTL in milliseconds (default: 300000)"
      },
      "maxConcurrentDispatches": {
        "type": "number",
        "minimum": 1,
        "maximum": 50,
        "description": "Maximum concurrent dispatched tasks (default: 3)"
      },
      "modules": {
        "type": "object",
        "properties": {
          "memory": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          },
          "dispatch": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          },
          "murmur": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          },
          "linter": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              }
            }
          }
        }
      },
      "memory": {
        "type": "object",
        "properties": {
          "embedding": {
            "type": "object",
            "properties": {
              "provider": {
                "type": "string",
                "enum": ["openai", "ollama"]
              },
              "model": {
                "type": "string"
              },
              "baseUrl": {
                "type": "string"
              },
              "apiKey": {
                "type": "string"
              },
              "dimensions": {
                "type": "number"
              }
            }
          },
          "search": {
            "type": "object",
            "properties": {
              "hybridEnabled": {
                "type": "boolean",
                "default": true
              },
              "vectorWeight": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.7
              },
              "bm25Weight": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.3
              },
              "maxResults": {
                "type": "number",
                "minimum": 1,
                "default": 10
              },
              "tierBoost": {
                "type": "object",
                "properties": {
                  "hot": {
                    "type": "number",
                    "default": 1.0
                  },
                  "warm": {
                    "type": "number",
                    "default": 0.8
                  },
                  "cold": {
                    "type": "number",
                    "default": 0.5
                  }
                }
              }
            }
          },
          "indexPaths": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
