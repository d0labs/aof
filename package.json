{
  "name": "aof",
  "version": "0.1.0",
  "description": "Agentic Ops Fabric — deterministic orchestration for multi-agent systems",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/plugin.js",
  "bin": {
    "aof": "dist/cli/index.js",
    "aof-daemon": "dist/daemon/index.js"
  },
  "scripts": {
    "build": "tsc && node scripts/copy-extension-entry.js",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "deploy:plugin": "scripts/deploy-plugin.sh",
    "test": "./scripts/test-lock.sh run",
    "test:watch": "vitest",
    "test:unlocked": "vitest run",
    "test:e2e": "./scripts/test-lock.sh run --config tests/vitest.e2e.config.ts",
    "test:e2e:watch": "vitest --config tests/vitest.e2e.config.ts",
    "test:e2e:verbose": "VERBOSE_TESTS=true ./scripts/test-lock.sh run --config tests/vitest.e2e.config.ts",
    "test:integration:plugin": "./scripts/test-lock.sh run --config tests/integration/vitest.config.ts",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "node dist/cli/index.js lint",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "aof",
    "agents",
    "orchestration",
    "deterministic",
    "openclaw"
  ],
  "author": "Xavier Spriet",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.3",
    "gray-matter": "^4.0.3",
    "hnswlib-node": "^3.0.0",
    "prom-client": "^15.1.3",
    "sqlite-vec": "^0.1.7-alpha.2",
    "write-file-atomic": "^7.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "openclaw": {
    "id": "aof",
    "name": "AOF — Agentic Ops Fabric",
    "description": "Deterministic task orchestration for multi-agent systems",
    "configSchema": {
      "type": "object",
      "properties": {
        "dryRun": {
          "type": "boolean",
          "default": true
        },
        "dataDir": {
          "type": "string"
        },
        "gatewayUrl": {
          "type": "string"
        },
        "gatewayToken": {
          "type": "string"
        },
        "pollIntervalMs": {
          "type": "number"
        },
        "defaultLeaseTtlMs": {
          "type": "number"
        },
        "heartbeatTtlMs": {
          "type": "number"
        },
        "maxConcurrentDispatches": {
          "type": "number",
          "minimum": 1,
          "maximum": 50
        },
        "modules": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "dispatch": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "murmur": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "linter": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            }
          }
        },
        "memory": {
          "type": "object",
          "properties": {
            "embedding": {
              "type": "object",
              "properties": {
                "provider": {
                  "type": "string",
                  "enum": [
                    "openai",
                    "ollama"
                  ]
                },
                "model": {
                  "type": "string"
                },
                "baseUrl": {
                  "type": "string"
                },
                "apiKey": {
                  "type": "string"
                },
                "dimensions": {
                  "type": "number"
                }
              }
            },
            "search": {
              "type": "object",
              "properties": {
                "hybridEnabled": {
                  "type": "boolean",
                  "default": true
                },
                "vectorWeight": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "default": 0.7
                },
                "bm25Weight": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "default": 0.3
                },
                "maxResults": {
                  "type": "number",
                  "minimum": 1,
                  "default": 10
                },
                "tierBoost": {
                  "type": "object",
                  "properties": {
                    "hot": {
                      "type": "number",
                      "default": 1
                    },
                    "warm": {
                      "type": "number",
                      "default": 0.8
                    },
                    "cold": {
                      "type": "number",
                      "default": 0.5
                    }
                  }
                }
              }
            },
            "indexPaths": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
