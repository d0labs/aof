{
  "name": "aof",
  "version": "0.1.0",
  "description": "Agentic Ops Fabric — deterministic orchestration for multi-agent systems",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin.js",
      "types": "./dist/plugin.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/d0labs/aof.git"
  },
  "files": [
    "dist/",
    "prompts/",
    "skills/",
    "index.ts",
    "openclaw.plugin.json",
    "README.md"
  ],
  "bin": {
    "aof": "dist/cli/index.js",
    "aof-daemon": "dist/daemon/index.js"
  },
  "scripts": {
    "build": "tsc && node scripts/copy-extension-entry.js",
    "prepublishOnly": "npm run build && npm run typecheck",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "deploy:plugin": "scripts/deploy-plugin.sh",
    "test": "./scripts/test-lock.sh run",
    "test:watch": "vitest",
    "test:unlocked": "vitest run",
    "test:e2e": "./scripts/test-lock.sh run --config tests/vitest.e2e.config.ts",
    "test:e2e:watch": "vitest --config tests/vitest.e2e.config.ts",
    "test:e2e:verbose": "VERBOSE_TESTS=true ./scripts/test-lock.sh run --config tests/vitest.e2e.config.ts",
    "test:integration:plugin": "./scripts/test-lock.sh run --config tests/integration/vitest.config.ts",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "node dist/cli/index.js lint",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "release": "GITHUB_TOKEN=$(gh auth token) release-it",
    "release:dry": "GITHUB_TOKEN=$(gh auth token) release-it --dry-run",
    "release:patch": "GITHUB_TOKEN=$(gh auth token) release-it patch",
    "release:minor": "GITHUB_TOKEN=$(gh auth token) release-it minor",
    "release:major": "GITHUB_TOKEN=$(gh auth token) release-it major"
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "keywords": [
    "aof",
    "agents",
    "orchestration",
    "deterministic",
    "openclaw"
  ],
  "author": "Xavier Spriet",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^7.10.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^12.6.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.3",
    "gray-matter": "^4.0.3",
    "hnswlib-node": "^3.0.0",
    "prom-client": "^15.1.3",
    "sqlite-vec": "^0.1.7-alpha.2",
    "write-file-atomic": "^7.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@release-it/conventional-changelog": "^10.0.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.0.0",
    "release-it": "^19.2.4",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "openclaw": ">=2026.2.0"
  },
  "peerDependenciesMeta": {
    "openclaw": {
      "optional": true
    }
  },
  "openclaw": {
    "id": "aof",
    "name": "AOF — Agentic Ops Fabric",
    "description": "Deterministic task orchestration for multi-agent systems",
    "configSchema": {
      "type": "object",
      "properties": {
        "dryRun": {
          "type": "boolean",
          "default": false
        },
        "dataDir": {
          "type": "string"
        },
        "gatewayUrl": {
          "type": "string"
        },
        "gatewayToken": {
          "type": "string"
        },
        "pollIntervalMs": {
          "type": "number"
        },
        "defaultLeaseTtlMs": {
          "type": "number"
        },
        "heartbeatTtlMs": {
          "type": "number"
        },
        "maxConcurrentDispatches": {
          "type": "number",
          "minimum": 1,
          "maximum": 50
        },
        "modules": {
          "type": "object",
          "properties": {
            "memory": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "dispatch": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "murmur": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "linter": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            }
          }
        },
        "memory": {
          "type": "object",
          "properties": {
            "embedding": {
              "type": "object",
              "properties": {
                "provider": {
                  "type": "string",
                  "enum": [
                    "openai",
                    "ollama"
                  ]
                },
                "model": {
                  "type": "string"
                },
                "baseUrl": {
                  "type": "string"
                },
                "apiKey": {
                  "type": "string"
                },
                "dimensions": {
                  "type": "number"
                }
              }
            },
            "search": {
              "type": "object",
              "properties": {
                "hybridEnabled": {
                  "type": "boolean",
                  "default": true
                },
                "vectorWeight": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "default": 0.7
                },
                "bm25Weight": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1,
                  "default": 0.3
                },
                "maxResults": {
                  "type": "number",
                  "minimum": 1,
                  "default": 10
                },
                "tierBoost": {
                  "type": "object",
                  "properties": {
                    "hot": {
                      "type": "number",
                      "default": 1
                    },
                    "warm": {
                      "type": "number",
                      "default": 0.8
                    },
                    "cold": {
                      "type": "number",
                      "default": 0.5
                    }
                  }
                }
              }
            },
            "reranker": {
              "type": "object",
              "description": "Local cross-encoder reranker (no API calls). Requires @huggingface/transformers.",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": false,
                  "description": "Enable reranking after hybrid search"
                },
                "modelPath": {
                  "type": "string",
                  "description": "HuggingFace model ID or local path. Default: Xenova/ms-marco-MiniLM-L-6-v2 (~22MB quantized ONNX)"
                },
                "topKBeforeRerank": {
                  "type": "number",
                  "minimum": 1,
                  "default": 20,
                  "description": "Candidates fetched from hybrid search before reranking"
                }
              }
            },
            "indexPaths": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "optionalDependencies": {
    "@huggingface/transformers": "^3.8.1"
  }
}
